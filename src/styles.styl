body
  font-family: 'Open Sans', sans-serif;

html, body, .container-fluid, .row, .col-xs-1,.col-xs-11, .rooms, .room-members
  height 100%
div
  box-sizing border-box
a
  text-decoration none
.row.header
  height 50px

h1
  font-size 12px
  margin 0
  color #65737E 

.rooms
  width 120px
  position fixed
  left 0
  background-color #232830

  h1
    color #4F5B66
    font-size 12px
    margin 10px 0 0 7px

  .room-list
    list-style none
    padding 0px 0 0 0
    margin 0

    .room
      padding 3px 15px
      a
        color #65737E
        font-size 14px

      &:hover
        background #2B303B
        cursor pointer
        a
          color #C0C5CE
          text-decoration none

.room-header
  position fixed
  top 0
  left 120px
  width 100%
  height 30px
  background-color #1C1F26
  display none
  h1
    margin 8px auto
    width 200px
    text-transform uppercase

.message-box
  position fixed
  bottom 0
  left 120px
  width 100%
  height 50px
  background-color #1C1F26
  z-index 10
  .input,.button
    float left
    display inline-block
  .input
    width 60%
    textarea
      width 100%
      background-color #1C1F26
      outline none
      border none
      color #C0C5CE
      padding 8px
      font-size 12px
      resize none
  .button
    width 21%
    height 100%
    color #8DB5B4
    font-size 14px
    padding 15px 25px
    border-left 1px solid #8db5b4
    outline none
    &:hover
      background-color #343D46
      
.noselect
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.chat
  position fixed
  top 0
  margin 0 0 0 120px 
  background-color #2B303B
  height 465px
  overflow scroll
  .chat-wrap
    min-width 487px

.message
  color #C0C5CE
  display inline-block
  width 100%
  padding 5px
  font-size 12px
  .ava,.name-and-text,.date
    float left
    display inline-block
  .ava
    width 60px
    height 70px
    padding 5px 0 0 2px
  .name-and-text
    width 65%
    padding-right 10px
    .name
      color #C97050
    .text
      margin 5px 0
  .date
    width 85px
    color #A3BE8C
